<Window x:Class="VideoOptimizer.UI.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Optimizer - Error" 
        Height="400" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="300"
        MinWidth="400"
        Background="#F8F9FA">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Ellipse Width="40" Height="40" Fill="#E74C3C" Margin="0,0,15,0">
                <Ellipse.OpacityMask>
                    <RadialGradientBrush>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.OpacityMask>
            </Ellipse>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Text="Video Optimization Failed" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#E74C3C"/>
                <TextBlock x:Name="ErrorMessageText" 
                           Text="An error occurred during video optimization." 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>

        <!-- Error Details Label -->
        <TextBlock Grid.Row="2" 
                   Text="Error Details:" 
                   FontSize="12" 
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"/>

        <!-- Error Details Text Box -->
        <Border Grid.Row="4" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="ErrorDetailsText"
                         Text="No additional details available."
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         BorderThickness="0"
                         Background="Transparent"/>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Copy Details" 
                    Click="CopyDetailsButton_Click"
                    Background="#95A5A6"
                    Width="100"/>
            <Button Content="Close" 
                    Click="CloseButton_Click"
                    IsDefault="True"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window> 