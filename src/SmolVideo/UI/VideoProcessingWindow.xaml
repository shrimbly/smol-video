<Window x:Class="SmolVideo.UI.VideoProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing Video" 
        Height="320" 
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#F8F9FA">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="Foreground" Value="#3498DB"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Processing Video..." 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   HorizontalAlignment="Center"
                   Foreground="#2C3E50"/>

        <!-- File Information -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock x:Name="InputFileText" 
                       Text="Input: sample_video.mp4" 
                       FontSize="12" 
                       Foreground="#7F8C8D"
                       TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="OutputFileText" 
                       Text="Output: sample_video_edited.mp4" 
                       FontSize="12" 
                       Foreground="#7F8C8D"
                       TextTrimming="CharacterEllipsis"/>
        </StackPanel>

        <!-- Operations Summary -->
        <StackPanel Grid.Row="4" Orientation="Vertical">
            <TextBlock Text="Operations:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock x:Name="OperationsText" 
                       Text="â€¢ Trimming: 00:00:10 - 00:01:30" 
                       FontSize="11" 
                       Foreground="#7F8C8D"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Progress Bar -->
        <ProgressBar x:Name="MainProgressBar" 
                     Grid.Row="6" 
                     Value="0" 
                     Maximum="100"/>

        <!-- Progress Text -->
        <TextBlock x:Name="ProgressText" 
                   Grid.Row="8" 
                   Text="0% - Preparing..." 
                   HorizontalAlignment="Center" 
                   FontSize="14"
                   FontWeight="Medium"/>

        <!-- Status Information -->
        <Grid Grid.Row="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Processing Time:" FontSize="11" Foreground="#95A5A6"/>
                <TextBlock x:Name="ElapsedTimeText" Text="00:00" FontSize="12" FontWeight="Medium"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                <TextBlock Text="Speed:" FontSize="11" Foreground="#95A5A6"/>
                <TextBlock x:Name="SpeedText" Text="0.0x" FontSize="12" FontWeight="Medium"/>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="12" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Click="CancelButton_Click"
                    Width="100"/>
            <Button x:Name="OpenFolderButton" 
                    Content="Open Folder" 
                    Click="OpenFolderButton_Click"
                    Width="120"
                    Background="#27AE60"
                    Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window> 